  "common_questions": {
    "where_is_create_offer_button": {
      "question": "Where is the Create Offer button?",
      "answer": "Dashboard → My Offers (left sidebar) → Look for blue 'Create Offer' button with + icon in the 'My Offers' card header (top-right)",
      "task": "create_offer"
    },
    "how_to_see_my_offers": {
      "question": "Where can I see my offers?",
      "answer": "Dashboard → My Offers (click in left sidebar). You'll see all your offers with status badges.",
      "task": "view_my_offers"
    },
    "where_are_marketplace_offers": {
      "question": "Where can I see marketplace offers?",
      "answer": "Feed page (/) → Click 'Offers' in left sidebar. The main content will show all available offers from your network.",
      "task": "browse_feed_offers"
    },
    "how_to_message_someone": {
      "question": "How do I send a message?",
      "answer": "Dashboard → Messages (left sidebar) → Click on a connection or 'New Message'",
      "task": "message_connection"
    },
    "offer_not_visible": {
      "question": "I created an offer but can't see it in marketplace",
      "answer": "Check the status. If it says 'Pending Approval', the target person hasn't approved it yet. Once they approve in their Messages, it will become 'Active' and appear in marketplace.",
      "task": "wait_for_approval"
    }
  }
